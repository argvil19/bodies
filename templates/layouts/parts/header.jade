header
    div.navbar-fixed
        nav
            div.nav-wrapper
                a(href="/").brand-logo: h5 Hit Bodies
                a.page-act.hide-on-med-and-down: h5= section
                .header-search-wrapper.hide-on-med-and-down
                    i.material-icons search
                    input.header-search-input.z-depth-2(type='text', name='Search', placeholder='Explore store', maxlength="40")

                a.button-collapse.show-on-large(data-activates='mobile-menu'): i(class="material-icons") menu
                ul.right.hide-on-small-and-down
                    li
                        if user
                            a#icon-nav.collection-item.avatar(href='/keystone'): img.circle.responsive-img(src='/images/profile/profile-test.png', alt='')
                        else
                            a#icon-nav.btn-floating(href='/keystone/signin')
                                i.material-icons#menu account_circle

                ul.side-nav.fixed#mobile-menu
                    h4 Menu
                        a#sidemenu
                            i.fa.fa-chevron-left#sidemenu(aria-hidden="true")
                    hr
                    li: a(href='/') Home
                    li: a(href='/store/get') Store
                    li: a(href='#') Contact
                    hr
                    li
                        if user
                            if user.canAccessKeystone
                                a.waves-effect.waves-light.btn(href='/keystone') Dashboard
                                a.waves-effect.waves-light.btn.option-red(href='/keystone/signout') Sign Out
                            unless user.canAccessKeystone
                                a.waves-effect.waves-light.btn(href='/user/purchases') Purchases
                                a.waves-effect.waves-light.btn(href='/cart') Cart
                                a.waves-effect.waves-light.btn.option-red(href='/keystone/signout') Sign Out
                        else
                            a.waves-effect.waves-light.btn(href='/keystone/signin') Sign in
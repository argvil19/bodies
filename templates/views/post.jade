extends ../layouts/default

block content
	div#banner.imagebanner
		img(src = "/images/logos/hb-banner-v1b-1440px.jpg")
	div.container.top30
		div.row
			each cat, cat_i in data.post.categories
				p: a(href='/blog/' + cat.id): span.meta-nav &larr;
					| Back to content of 
					!= cat.name
			div.col.s12.m9.l9
				each cat, cat_i in data.post.categories
					a#content-link(href='/blog/' + cat.id): h4.text-center= cat.name
					| 
					h5.bot15.text-center= data.post.title
					div.row.top30
						div#date-line.col.s12.m12.l12.text-center
							if data.post.publishedDate
								span#date-pub.col.s12.m12.l12: h6.text-center= data.post._.publishedDate.format('MMMM Do, YYYY')
					div.row.bot80
						div.col.s12.m12.l12
							div.row.center-align
								if data.post.image.exists
									img.responsive-img(src= data.post._.image.fit(750,450))
							div.row
								!= data.post.content.full
					div.row
						div.col.s12.m12.l12
							if data.post.author
								h5.text-center.right= data.post.author.name.first
					div.row.top30.bot30
						div.col.s12.m12.l12
							each cat, cat_i in data.post.categories
								p: a(href='/blog/' + cat.id): span.meta-nav &larr;
									| Back to content of 
									!= cat.name


extends ../../layouts/default
block content
	div.container.row.text-center.top80
		div.col.s12.m12.l12.bot30
			h2 Your purchases
		if purchases.length
			div.row.bot80
				div.s12.m12.l12
					table.bordered.striped.centered
						thead
							tr
							th(data-field="series") Series
							|               
							th(data-field="description") Description
							| 
							th(data-field="action") 
						tbody
							each item in purchases
								tr
									td= item.name
									| 
									td= item.description
									| 
									td: a.btn.waves-effect.waves-light(href='/blog/'+item.id) Read
		else
			div.row.bot80
				div.s12.m12.l12
					.alert.alert-info(role="alert") You didn't bought anything yet...